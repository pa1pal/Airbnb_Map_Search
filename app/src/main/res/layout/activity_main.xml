<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
    android:orientation="vertical">

    <fragment
        android:id="@+id/maps_fragment"
        android:name="pa1pal.responsivemaps.fragment.MapsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <fragment
        android:id="@+id/places_fragment"
        android:name="pa1pal.responsivemaps.fragment.PlacesFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>